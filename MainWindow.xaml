<Window x:Class="True_Weather.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weather v1" Height="480" Width="525" Loaded="MainWindow_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="359*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="10,27,0,0" TextWrapping="Wrap" Text="Please Enter a ZIP:" VerticalAlignment="Top" FontWeight="Bold" Width="166"/>
        <TextBox x:Name="zipQuery" HorizontalAlignment="Left" Height="23" Margin="132,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="125" KeyDown="OnEnter" />
        <Button x:Name="findButton" Content="Find" HorizontalAlignment="Left" Margin="262,27,0,0" VerticalAlignment="Top" Width="107" RenderTransformOrigin="1.009,0.55" Click="findButton_Click"/>
        <Label x:Name="lblW" Content="" HorizontalAlignment="Left" Margin="408,25,0,0" VerticalAlignment="Top" Width="99"/>
        <TextBlock x:Name="resultBox" Margin="10" Grid.Row="1" TextWrapping="Wrap" Text=""/>

    </Grid>
</Window>
